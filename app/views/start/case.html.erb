<%= stylesheet_link_tag    "case", media: "all", "data-turbolinks-track" => true %>
<div class="content">
	<ul class="case-list">
		<% @cases.each do |c| %><li>
			<a href="<%= c.show_url %>"><img src="<%= c.pic %>" alt=""></a>
			<h3><%= c.title %></h3>
			<p><%= c.tags.gsub(",", "／") %></p>
		</li><% end -%>
	</ul>
</div>