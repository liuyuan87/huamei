<%= stylesheet_link_tag    "case", media: "all", "data-turbolinks-track" => true %>
<div class="content">
	<% if !@case_tag.blank? %>
	<h2><%= @case_tag.name %></h2>
	<% else %>
	<h2>所有案例</h2>
	<% end %>
	<ul class="case-list">
		<% @cases.each do |c| %><li>
			<a href="<%= c.show_url %>"><img src="<%= c.pic %>" alt="<%= c.title %>案例封面"></a>
			<h3><a href="<%= c.show_url %>"><%= c.title %></a></h3>
			<p><%= c.case_tags.map{|t|"<a href=\"/case_tag/" + t.name + "\">" + t.name + "</a>"}.join("／").html_safe %></p>
		</li><% end -%>
	</ul>
</div>