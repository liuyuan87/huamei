<%= javascript_include_tag "kindeditor" %>
<%= form_tag :action => "intro" do %>	
<table class="setTable">
	<thead>
		<tr>
			<th colspan="2">公司介绍</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
		<tr>
			<td class="data_label">公司介绍：</td>
			<td class="data_ipt">
				<textarea name="sys_setting" style="width:400px;height:200px;line-height:22px;"><%= @setting %></textarea>
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td class="data_sbt">
				<input type="submit" name="submit" value="确定" />
			</td>
		</tr>
		<% if !@result.nil? %>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
		<tr>
			<td class="data_label">result：</td>
			<td class="data_result">保存成功。</td>
		</tr>
		<% end %>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
	</tbody>
</table>
<% end %>