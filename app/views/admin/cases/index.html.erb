<div class="nav">
	<div class="list-opts">
		<div class="nav-links">
			<a href="/admin/cases">案例</a>
			<a href="/admin/cases/new">添加 案例</a>
		</div>
	</div>
</div>
<div class="main">
<table class="stdtable edtable">
	<thead>
		<tr>
			<th width="10%">编号</th>
			<th>标题</th>
			<th width="40%">管理</th>
		</tr>
	</thead>
	<tbody>
	<%
		if @cases.length>0
			@cases.each do |c|
	%>
		<tr>
			<td><%= c.id %></td>
			<td><%= c.title %></td>
			<td>
				<%
					if c.is_hot == 1
				%>
				<a href="/admin/cases/<%= c.id %>/c_hot" style="color:#FF0000;">最热</a>|
				<% else %>
				<a href="/admin/cases/<%= c.id %>/s_hot">最热</a>|
				<%
					end
				%>
				<a href="/admin/cases/<%= c.id %>/edit">修改</a>|<%= link_to "删除", {:action => "destroy", :id => c}, :confirm => "确定删除？", :method => "delete" %>
			</td>
		</tr>
	<%
			end
		else
	%>
		<tr>
			<td colspan="3" style="text-align:left;">&nbsp;还没有内容。</td>
		</tr>
	<%
		end
	%>
	</tbody>
</table>
</div>