<div class="nav">
	<div class="list-opts">
		<div class="nav-links">
			<a href="/admin/magazines">杂志管理</a>
			<a href="/admin/magazines/new">添加 杂志</a>
		</div>
	</div>
</div>
<div class="main">
<table class="stdtable edtable">
	<thead>
		<tr>
			<th width="10%">编号</th>
			<th>标题</th>
			<th width="30%">地址</th>
			<th width="30%">管理</th>
		</tr>
	</thead>
	<tbody>
	<%
		if @magazines.length>0
			@magazines.each do |magazine|
	%>
		<tr>
			<td><%= magazine.id %></td>
			<td><%= magazine.title %></td>
			<td><%= magazine.zip %></td>
			<td>
				<a href="/admin/magazines/<%= magazine.id %>/edit">修改</a>|<%= link_to "删除", {:action => "destroy", :id => magazine}, :confirm => "确定删除？", :method => "delete" %>
			</td>
		</tr>
	<%
			end
		else
	%>
		<tr>
			<td colspan="4" style="text-align:left;">&nbsp;还没有内容。</td>
		</tr>
	<%
		end
	%>
	</tbody>
</table>
</div>